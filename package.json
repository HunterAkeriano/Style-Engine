{
  "name": "css-zone",
  "private": true,
  "workspaces": [
    "backend"
  ],
  "version": "0.1.0",
  "type": "module",
  "description": "CSS-Zone - Генератор CSS-градиентов, теней и анимаций",
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc && vite build",
    "build:ssg": "vue-tsc && vite-ssg build",
    "vercel-build": "VITE_BASE=/ npm run build:ssg",
    "preview": "vite preview",
    "preview:ssg": "vite preview --host --port 4173",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .ts,.vue",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "generate:sitemap": "node scripts/generate-sitemap.cjs",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "predeploy:ssg": "npm run build:ssg && cp dist/index.html dist/404.html",
    "deploy:ssg": "gh-pages -d dist",
    "deploy:ssg:base": "npm run predeploy:ssg && gh-pages -d dist",
    "backend:dev": "npm --prefix backend run dev",
    "backend:build": "npm --prefix backend run build",
    "backend:start": "npm --prefix backend run start"
  },
  "dependencies": {
    "@unhead/vue": "^2.0.19",
    "axios": "^1.13.2",
    "body-scroll-lock-upgrade": "^1.1.0",
    "jszip": "^3.10.1",
    "lil-gui": "^0.20.0",
    "pinia": "^2.3.0",
    "three": "^0.174.0",
    "vue": "^3.5.13",
    "vue-i18n": "^10.0.4",
    "vue-recaptcha-v3": "^2.0.1",
    "vue-router": "^4.5.0",
    "vue-toastification": "^2.0.0-rc.5",
    "vue3-google-signin": "^2.1.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-a11y": "^10.0.8",
    "@storybook/addon-docs": "^10.0.8",
    "@storybook/addon-onboarding": "^10.0.8",
    "@storybook/addon-vitest": "^10.0.8",
    "@storybook/vue3-vite": "^10.0.8",
    "@types/three": "^0.181.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/browser-playwright": "^4.0.12",
    "@vitest/coverage-v8": "^4.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-storybook": "^10.0.8",
    "eslint-plugin-vue": "^10.5.1",
    "gh-pages": "^6.3.0",
    "playwright": "^1.56.1",
    "sass": "^1.83.0",
    "storybook": "^10.0.8",
    "typescript": "^5.7.2",
    "vite": "^6.0.7",
    "vite-ssg": "^0.24.1",
    "vitest": "^4.0.12",
    "vue-tsc": "^2.2.0"
  }
}
